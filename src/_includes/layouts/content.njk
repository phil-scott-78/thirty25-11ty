---
layout: layouts/base.njk
---

<main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
    <header>
        <h1 class="home">{{ renderData.title or title or metadata.title }}</h1>
        {% if date %}Posted <time>{{ date | readableDate }}</time> {% endif %}
        {% if tags %}
            {% set tagslist = tags %}
            {% include "taglist.njk" %}
        {% endif %}
    </header>

    {{ content | safe }}
</main>
