<div class="postlist">
    {% for post in postslist | reverse %}
    <div class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
        <div class="postlist-item-content">
            <h2><a href="{{ post.url | url }}" class="postlist-link">{{ post.data.title }}</a></h2>
        </div>
        <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
        {% for tag in post.data.tags %} {%- if tag != "posts" -%} {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
        {%- endif -%} {% endfor %}
    </div>
    {% endfor %}
</div>
